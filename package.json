  "scripts": {
    "start": "npm run serve",
    "build": "npm run build-ts && npm run copy-static-assets && npm run webpack",
    "webpack": "webpack",
    "webpack-watch": "webpack --watch",
    "serve": "node dist/server.js",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "copy-static-assets": "ts-node copyStaticAssets.ts",
    "debug": "npm run build && npm run watch-debug",
    "serve-debug": "nodemon --inspect dist/server.js",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node,Webpack\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve-debug\" \"npm run webpack-watch\""
  },
  "devDependencies": {
    "@types/d3": "^4.12.0",
    "@types/d3-ease": "^1.0.7",
    "@types/d3-geo": "^1.9.4",
    "@types/d3-sankey": "^0.7.2",
    "@types/errorhandler": "^0.0.32",
    "@types/express": "^4.11.0",
    "@types/node": "^9.3.0",
    "awesome-typescript-loader": "^3.4.1",
    "concurrently": "^3.5.1",
    "json-loader": "^0.5.7",
    "nodemon": "^1.14.11",
    "shelljs": "^0.8.0",
    "ts-node": "^4.1.0",
    "tslint": "^5.9.1",
    "typescript": "^2.6.2",
    "webpack": "^3.10.0"
  },
  "dependencies": {
    "d3": "^4.12.2",
    "d3-ease": "^1.0.3",
    "d3-geo": "^1.9.1",
    "d3-sankey": "^0.7.1",
    "errorhandler": "^1.5.0",
    "express": "^4.16.2"
  }
}
